<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:id="@+id/isi_Ketegori"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/layout_bg"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="List Harga and Kategori Pesanan"
            android:textSize="23sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:id="@+id/judul_img1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/asa" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Reguler"
                    android:textSize="25sp" />




            </LinearLayout>

            <TextView
                android:id="@+id/keteangan_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/judul_img1"
                android:layout_marginStart="50dp"
                android:text="Keterangan : "
                android:textSize="15sp" />

            <TextView
                android:id="@+id/isi_keteangan_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/judul_img1"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/keteangan_r"
                android:text="1 hari kerja "
                android:textSize="15sp" />

            <TextView
                android:id="@+id/harga_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/keteangan_r"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:text="Harga/kg    :"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/isi_harga_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/keteangan_r"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/keteangan_r"
                android:text="Rp.6000 /Kg"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:id="@+id/judul_img2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/train" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ekspress "
                    android:textSize="25sp"
                    android:layout_marginStart="8dp"/>




            </LinearLayout>

            <TextView
                android:id="@+id/keteangan_eks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/judul_img2"
                android:layout_marginLeft="50dp"
                android:text="Keterangan : "
                android:textSize="15sp" />

            <TextView
                android:id="@+id/isi_keteangan_eks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/judul_img2"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/keteangan_eks"
                android:text="9 jam kerja "
                android:textSize="15sp" />

            <TextView
                android:id="@+id/harga_eks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/keteangan_eks"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:text="Harga/kg    :"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/isi_harga_eks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/keteangan_eks"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/keteangan_eks"
                android:text="Rp.9000 /Kg"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:id="@+id/judul_img3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/rocket" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kilat"
                    android:textSize="25sp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/keteangan_k"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/judul_img3"
                android:layout_marginLeft="50dp"
                android:text="Keterangan : "
                android:textSize="15sp" />

            <TextView
                android:id="@+id/isi_keteangan_k"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/judul_img3"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/keteangan_k"
                android:text="6 jam kerja "
                android:textSize="15sp" />

            <TextView
                android:id="@+id/harga_k"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/keteangan_k"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:text="Harga/kg    :"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/isi_harga_k"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/keteangan_k"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/keteangan_k"
                android:text="Rp.9000 /Kg"
                android:textSize="15sp" />
        </RelativeLayout>




    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>