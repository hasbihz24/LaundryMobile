<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/artboard_1"
        android:layout_marginTop="-30dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@drawable/layout_bg"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Datang di App Laundry"
            android:textSize="27sp"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="#131621"/>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/desc_judul"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:textColor="#131621"/>

        <Button
            android:id="@+id/btnList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="List Harga"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:theme="@style/Button_White"/>

        <Button
            android:id="@+id/btnPesan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Mulai Pesanan"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:theme="@style/Button_Green"/>

        <Button
            android:id="@+id/btnResi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Resi Pesanan"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:theme="@style/Button_White"/>

        <Button
            android:id="@+id/btnKeluar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:text="Exit / Keluar"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:theme="@style/Button_Green"/>


        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>